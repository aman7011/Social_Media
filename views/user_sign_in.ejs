<link rel="stylesheet" href="<%= assetPath('css/sign-in.css') %>">

<h1>Sign In</h1>
<form action="/users/create-session" method="POST">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" name="password" class="form-control" id="exampleInputPassword1" required>
      </div>
   
    <input type="submit" id="button" value="Sign In">
<hr>
      <p id="or">OR</p>
</form>

<p id="option">
    <a href="/users/auth/google"><i class="fab fa-google-plus-square"></i>Log In with Gmail</a>
</p>

